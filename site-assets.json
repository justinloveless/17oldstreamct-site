{
  "version": "1.0",
  "description": "Configuration file defining manageable assets for this static site",
  "assets": [
    {
      "path": "content/property.json",
      "type": "json",
      "label": "Property Information",
      "description": "Property address, location, price, and details",
      "handler": "handlers/property.js",
      "maxSize": 5120,
      "allowedExtensions": [".json"],
      "schema": {
        "type": "object",
        "required": ["address", "location", "price"],
        "properties": {
          "address": {
            "type": "string",
            "description": "Street address of the property"
          },
          "location": {
            "type": "string",
            "description": "City, state, and ZIP code"
          },
          "price": {
            "type": "string",
            "description": "Price formatted as a string (e.g., '$379,000')"
          },
          "zillowUrl": {
            "type": "string",
            "format": "uri",
            "description": "URL to the property listing on Zillow"
          },
          "details": {
            "type": "object",
            "properties": {
              "bedrooms": {
                "type": "string",
                "description": "Number of bedrooms"
              },
              "bathrooms": {
                "type": "string",
                "description": "Number of bathrooms"
              },
              "squareFeet": {
                "type": "string",
                "description": "Square footage (e.g., '1,456')"
              },
              "lotSize": {
                "type": "string",
                "description": "Lot size (e.g., '10,794 sqft')"
              },
              "yearBuilt": {
                "type": "string",
                "description": "Year the property was built"
              },
              "pricePerSqft": {
                "type": "string",
                "description": "Price per square foot (e.g., '$260')"
              }
            }
          }
        }
      }
    },
    {
      "path": "assets/3c34242da33b88cdd1c94af6c1c807e0-cc_ft_768.webp",
      "type": "image",
      "label": "Hero Image",
      "description": "Main hero/banner image displayed at the top of the page",
      "handler": "handlers/hero-image.js",
      "maxSize": 2097152,
      "allowedExtensions": [".jpg", ".jpeg", ".png", ".webp"]
    },
    {
      "path": "content/hero-description.json",
      "type": "json",
      "label": "Hero Description",
      "description": "Hero section title, subtitle, and alt text",
      "handler": "handlers/hero-description.js",
      "maxSize": 2048,
      "allowedExtensions": [".json"],
      "schema": {
        "type": "object",
        "required": ["title", "subtitle"],
        "properties": {
          "alt": {
            "type": "string",
            "description": "Alt text for the hero image"
          },
          "title": {
            "type": "string",
            "description": "Main hero title displayed over the image"
          },
          "subtitle": {
            "type": "string",
            "description": "Hero subtitle displayed below the title"
          }
        }
      }
    },
    {
      "path": "content/summary.md",
      "type": "text",
      "label": "Summary Content",
      "description": "Markdown content for the property summary section",
      "handler": "handlers/summary.js",
      "maxSize": 51200,
      "allowedExtensions": [".md"]
    },
    {
      "path": "assets",
      "type": "directory",
      "label": "Photo Gallery",
      "description": "Directory containing gallery images. All images listed in image-descriptions.json will be displayed in the gallery.",
      "handler": "handlers/gallery.js",
      "maxSize": 209715200,
      "allowedExtensions": [".jpg", ".jpeg", ".png", ".webp"]
    },
    {
      "path": "content/image-descriptions.json",
      "type": "json",
      "label": "Image Descriptions",
      "description": "Optional JSON file mapping image filenames to alt text and descriptions",
      "maxSize": 51200,
      "allowedExtensions": [".json"],
      "schema": {
        "type": "object",
        "description": "Object where keys are image filenames and values are description objects",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "alt": {
              "type": "string",
              "description": "Alt text for the image (optional, defaults to empty string)"
            },
            "description": {
              "type": "string",
              "description": "Description of the image (optional)"
            }
          }
        }
      }
    }
  ]
}